            integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
            crossorigin=""></script>
    @RenderSection("head", false)
</head>
<body>

    <div class="page-container">
        <div class="page-sidebar">
            <header class="site-header">
                <div class="site-logo"><a href="index.html"><img @*src="images/logo.png"*@ alt="Mouldifi" title="Mouldifi"></a></div>
                <div class="sidebar-collapse hidden-xs"><a class="sidebar-collapse-icon" href="#"><i class="icon-menu"></i></a></div>
                <div class="sidebar-mobile-menu visible-xs"><a data-target="#side-nav" data-toggle="collapse" class="mobile-menu-icon" href="#"><i class="icon-menu"></i></a></div>
            </header>
            <ul id="side-nav" class="main-menu navbar-collapse collapse">



                @if (User.IsInRole("admin"))
                {
                    <li class="has-sub">
                        <a href="#">
                            <i class="fa fa-globe"></i> <span class="title">مدیریت مناطق</span>
                        </a>
                        <ul class="nav collapse">
                            <li><a href="/admin/Province/Index"><i class="fa fa-bank"></i>استان</a></li>
                            <li><a href="/admin/City"><i class="fa fa-building"></i>شهر</a></li>
                            <li><a href="/admin/district"><i class="fa fa-crosshairs"></i>محدوده کسب و کار</a></li>
                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="#">
                            <i class="icon-list"></i> <span class="title">دسته بندی ها</span>

                        </a>
                        <ul class="nav collapse">
                            <li><a href="/admin/Categories/Index"><i class="icon-list-add"></i>دسته بندی</a></li>

                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="#">
                            <i class="icon-users"></i> <span class="title">کاربران</span>

                        </a>
                        <ul class="nav collapse">
                            <li><a href="/admin/operator/"><i class="icon-users"></i>لیست متصدیان</a></li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("admin") || User.IsInRole("operator"))
                {
                    <li class="has-sub">
                        <a href="#">
                            <i class="icon-list"></i> <span class="title">اسلایدر ها</span>

                        </a>
                        <ul class="nav collapse">
                            <li><a href="/admin/Slider/Index"><i class="icon-list-add"></i>اسلایدر ها</a></li>

                        </ul>
                    </li>
                    <li class="has-sub">
                        <a href="#">
                            <i class="fa fa-gears"></i> <span class="title">کسب و کارها</span>

                        </a>
                        <ul class="nav collapse">
                            <li><a href="/admin/businesses/Index"><i class="fa fa-tasks"></i>مدیریت کسب و کار</a></li>
                            @if (User.IsInRole("admin"))
                            {
                                <li><a href="/admin/Feature/Index"><i class="fa fa-tags"></i>مدیریت ویژگی کسب و کار</a></li>
                            }
                        </ul>
                    </li>
                    <li>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-dark">خروج</button>
                        </form>
                    </li>
                }
            </ul>
            <!-- /main navigation -->
        </div>
        <div class="main-container gray-bg">

            @RenderBody()
        </div>



    </div>

    <script src="~/Designs/AdminControllPanel/js/jquery.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/css3-animate-it-plugin/css3-animate-it.js"></script>
    <script src="~/Designs/AdminControllPanel/js/bootstrap.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/metismenu/jquery.metisMenu.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/blockui-master/jquery.blockUI.js"></script>

    <script src="~/Designs/AdminControllPanel/js/functions.js"></script>


    <script src="~/Designs/AdminControllPanel/js/plugins/chartjs/Chart.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/vfs_fonts.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/extensions/Buttons/js/buttons.html5.js"></script>
    <script src="~/Designs/AdminControllPanel/js/plugins/datatables/extensions/Buttons/js/buttons.colVis.js"></script>
    <script src="~/Scripts/Common.js"></script>


    @RenderSection("scripts", false)
</body>
</html>