@model BizApp.Models.Basic.AnswerAskTheCommunityViewModel

@{
	ViewData["Title"] = "AddFaqsAnswers";
	Layout = "~/Views/Shared/_AllPagesLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="page-header__wrapper">
			<ul>
				<li><a href="#">@Model.answerAskTheCommunity_NavbarViewModel.BusinessName</a></li>
				<li><svg id="24x24_chevron_right" height="24" viewBox="0 0 24 24" width="24"><path d="M9.525 5.636L8.11 7.05 13.06 12l-4.95 4.95 1.415 1.414L15.89 12 9.524 5.636z"></path></svg><a href="#">از مردم بپرسید</a></li>
				<li><svg id="24x24_chevron_right" height="24" viewBox="0 0 24 24" width="24"><path d="M9.525 5.636L8.11 7.05 13.06 12l-4.95 4.95 1.415 1.414L15.89 12 9.524 5.636z"></path></svg>@Model.answerAskTheCommunity_NavbarViewModel.QuestionSubject</li>
			</ul>
		</div>
	</div>
</section>
<section class="questions-detail">
	<div class="container">
		<div class="row" data-space="0">
			<div class="col-lg-8">
				<div class="questions-detail__content">
					<div class="questions-detail__content__title">
						<h2>@Model.answerAskTheCommunity_NavbarViewModel.QuestionSubject</h2>

					</div>
					<div class="questions-detail__content__info">
						<span>پرسیده شده توسط <a href="#">@Model.answerAskTheCommunity_NavbarViewModel.UserName</a> در  @Model.answerAskTheCommunity_NavbarViewModel.Date </span>
					</div>

					<div class="questions-detail__content__title">
						<h4 class="text text-danger">پاسخ شما</h4>

					</div>
					<hr />

					<div class="questions-detail__content__answers-item">
						<div class="questions-detail__content__answers-item__header">
							<div class="review-content__recent__comment__avatar">
								<div class="review-content__recent__comment__avatar__image">
									<a href="#"><img src="@Model.singleAnswerAskTheCommunity_AnswersViewModels.UserPicture" alt=""></a>
								</div>
								<div class="review-content__recent__comment__avatar__text">
									<div class="review-content__recent__comment__avatar__text__name">
										<span>@Model.singleAnswerAskTheCommunity_AnswersViewModels.UserName</span>

									</div>
									<div class="review-content__recent__comment__avatar__text__actions">
										<ul>
											<li>
												<svg width="16" height="16" class="icon_svg"><path d="M11.23 1H4.77A3.77 3.77 0 001 4.77v6.46A3.77 3.77 0 004.77 15h6.46A3.77 3.77 0 0015 11.23V4.77A3.77 3.77 0 0011.23 1zM8 8.63a1.5 1.5 0 110-3 1.5 1.5 0 010 3zM7 11h2.1a2 2 0 011.9 2H5a2 2 0 012-2zm6.05.23a1.71 1.71 0 01-.15.71 4 4 0 00-2.17-2.58 3.42 3.42 0 00.82-2.23 3.5 3.5 0 10-7 0 3.46 3.46 0 00.83 2.23 4 4 0 00-2.18 2.58 1.71 1.71 0 01-.2-.71V4.77C3 3.792 3.792 3 4.77 3h6.46c.978 0 1.77.792 1.77 1.77l.05 6.46z"></path></svg>
												@Model.singleAnswerAskTheCommunity_AnswersViewModels.TotalFriend
											</li>
											<li>
												<svg width="16" height="16" class="icon_svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M11.23 1H4.77A3.77 3.77 0 001 4.77v6.46A3.77 3.77 0 004.77 15h6.46A3.77 3.77 0 0015 11.23V4.77A3.77 3.77 0 0011.23 1zM13 11.23A1.77 1.77 0 0111.23 13H4.77A1.77 1.77 0 013 11.23V4.77C3 3.792 3.792 3 4.77 3h6.46c.977 0 1.77.792 1.77 1.77v6.46zM9.18 6.65l1.64.24a.51.51 0 01.41.34.51.51 0 01-.13.51L9.91 8.9l.29 1.61a.49.49 0 01-.2.49.51.51 0 01-.3.12.46.46 0 01-.23-.06L8 10.29l-1.47.77a.5.5 0 01-.72-.53l.28-1.63L4.9 7.74a.51.51 0 01-.13-.51.51.51 0 01.41-.34l1.64-.24.73-1.49a.52.52 0 01.9 0l.73 1.49z"></path></svg>
												@Model.singleAnswerAskTheCommunity_AnswersViewModels.TotalBusinessImage

											</li>
											<li>
												<svg width="16" height="16" class="icon_svg"><path d="M5.076 6.674a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"></path><path d="M11.231 1H4.769A3.774 3.774 0 001 4.769v6.462A3.774 3.774 0 004.769 15h6.462A3.774 3.774 0 0015 11.231V4.769A3.774 3.774 0 0011.231 1zM4.769 3h6.462A1.77 1.77 0 0113 4.769v3.58l-.957-.759a4.35 4.35 0 00-5.624.172L3 10.834V4.77A1.77 1.77 0 014.769 3zm6.462 10H4.769a1.75 1.75 0 01-.902-.255l3.89-3.494a2.352 2.352 0 013.042-.094L13 10.902v.329A1.77 1.77 0 0111.231 13z"></path></svg>
												@Model.singleAnswerAskTheCommunity_AnswersViewModels.TotalReview

											</li>
										</ul>
									</div>
								</div>
							</div>
							<div class="questions-detail__content__info">
								<span><a href="#"></a> </span>
							</div>

						</div>
						<div class="questions-detail__content__answers-item__desc">
							<p id="currentText">@Model.singleAnswerAskTheCommunity_AnswersViewModels.Text</p>
						</div>
						<div class="questions-detail__content__answers-item__btns">
							<a style="height:30px" data-target="#click-question" data-toggle="modal"><i style="font-size:20px" class="fa">&#xf1f8;</i> <span></span></a>
							<a  style="height:30px" onclick="ActiveEdit();"><i style="font-size:20px" class="fa" >&#xf14b;</i> <span></span></a>
						</div>
					</div>

					<div id="questions-detail__content__form" class="questions-detail__content__form" style="display:none" >
						<form method="post">
							<h3>ویرایش پاسخ :</h3>
							<input name="BusinessId" value="@Model.answerAskTheCommunity_NavbarViewModel.BusinessId" hidden />
							<input name="BusinessFaqId" value="@Model.answerAskTheCommunity_NavbarViewModel.BusinessFaqId" hidden />
							<textarea class="form-control" name="Text" id="Text" required>@Model.singleAnswerAskTheCommunity_AnswersViewModels.Text</textarea>
							<button type="button" onclick="Edit()" class="btn btn-success">ویرایش پاسخ</button>
							<button type="button" onclick="cancellEdit()" class="btn btn-danger">انصراف</button>

						</form>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="questions-detail__sidebar">
					<div class="questions-detail__sidebar__location">
						<div class="questions-detail__sidebar__location__image">
							<a href="/BusinessHome/Index?Id=@Model.answerAskTheCommunity_NavbarViewModel.BusinessId">
								<img src="@Model.answerAskTheCommunity_NavbarViewModel.BusinessImage" alt="">
							</a>
						</div>
						<div class="questions-detail__sidebar__location__content">
							<div class="questions-detail__sidebar__location__content__title">
								<a href="/BusinessHome/Index?Id=@Model.answerAskTheCommunity_NavbarViewModel.BusinessId">@Model.answerAskTheCommunity_NavbarViewModel.BusinessName</a>
							</div>
							<div class="questions-detail__sidebar__location__content__star">
								<div class="questions-detail__sidebar__location__content__star__icon-star" data-star="@Model.answerAskTheCommunity_NavbarViewModel.BusinessRate"></div>
								<span> تعدادبازخورد @Model.answerAskTheCommunity_NavbarViewModel.BusinessTotalReview  </span>
							</div>
							<div class="questions-detail__sidebar__location__content__info">
								<span>$$ @Model.answerAskTheCommunity_NavbarViewModel.BusinessCity  ,  @Model.answerAskTheCommunity_NavbarViewModel.BusinessDistricName</span>
							</div>
						</div>
					</div>

				</div>
				<div class="questions-detail__sidebar__other-questions">
					<div class="questions-detail__sidebar__other-questions__title" style="margin-right:20px;cursor:pointer">
						<a href="/AskTheCommunity/GetFaqsAnswers?Id=@Model.answerAskTheCommunity_NavbarViewModel.BusinessId&BusinessFaqId=@Model.answerAskTheCommunity_NavbarViewModel.BusinessFaqId">همه پاسخ ها</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<form action="/AskTheCommunity/RemoveFaqsAnswer" method="post" id="frmRemoveBusinessFaq">
		<input value="@Model.singleAnswerAskTheCommunity_AnswersViewModels.Id" name="BusinessFaqAnswerId" id="BusinessFaqAnswerId" hidden />
		<input value="@Model.answerAskTheCommunity_NavbarViewModel.BusinessId" name="BusinessId" hidden />
		<input value="@Model.answerAskTheCommunity_NavbarViewModel.BusinessFaqId" name="BusinessFaqId" hidden />

	</form>


</section>
<div class="stay-gold-content__modal modal fade" id="click-question" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<div class="stay-gold-content__modal__header">
					<div class="stay-gold-content__modal__header__title">
						<h4>آیا تمایل به ادامه عملیات دارید ؟</h4>
					</div>
					<div class="stay-gold-content__modal__header__close">
						<a href="#" data-dismiss="modal"><svg width="24" height="24" class="icon_svg"><path d="M13.41 12l5.3-5.29a1.004 1.004 0 10-1.42-1.42L12 10.59l-5.29-5.3a1.004 1.004 0 00-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 000 1.42 1 1 0 001.42 0l5.29-5.3 5.29 5.3a1 1 0 001.42 0 1 1 0 000-1.42L13.41 12z"></path></svg></a>
					</div>
				</div>
				<div class="stay-gold-content__modal__footer">
					<div class="stay-gold-content__modal__footer__close">
						<button  class="btn btn-danger" data-dismiss="modal">خیر</button>
						<button class="btn btn-success" onclick="Remove()" style="margin-right:10px">بله</button>

					</div>
					<div class="stay-gold-content__modal__footer__report">
						@*<a href="#" data-toggle="tooltip" title="ریپورت">
								<svg width="18" height="18" class="icon_svg"><path d="M6 10V3c4.976 1.098 4.024-1 8 0v7c-4.024-.976-3.024 1.024-8 0zM4 2h1v14H4V2z"></path></svg>
							</a>*@
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	function Remove() {
		$("#frmRemoveBusinessFaq").submit();
	}
	function ActiveEdit() {

		$("#questions-detail__content__form").show(); 
	}

	function cancellEdit() {
		$("#questions-detail__content__form").hide(); 
	}
	function Edit() {
			var fd = new FormData();
		    fd.append('Text', $("#Text").val());
    		fd.append('Id', $("#BusinessFaqAnswerId").val());
			fd.append('Title', $("#title").val());
			$.ajax({
				type: "Post",
				url: '/AskTheCommunity/EditFactAnswer',
				dataType: "json",
				data: fd,
				contentType: false,
				processData: false,
				success: function (response) {
					$("#currentText").text($("#Text").val());
					$("#questions-detail__content__form").hide(); 

				}
			});
	}
</script>