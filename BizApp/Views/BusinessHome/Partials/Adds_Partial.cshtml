@model IEnumerable<BizApp.Models.Basic.BusinessHomePage_RelatedBusinessViewModel>



<div class="stay-gold-content__wrapper__consider">
	<div class="stay-gold-content__wrapper__consider__title">
		<h4>تبلیغات</h4>
		<span>حمایت شده</span>
		<svg width="16" height="16" class="icon_svg"><path d="M8 1a7 7 0 110 14A7 7 0 018 1zm0 2a5 5 0 100 10A5 5 0 008 3zm0 3.86a1 1 0 011 1v3a1 1 0 11-2 0v-3a1 1 0 011-1zm0-2.74a1 1 0 110 2 1 1 0 010-2z"></path></svg>
	</div>

	@foreach (var item in Model)
	{
		<div class="stay-gold-content__wrapper__consider__content">
			<div class="stay-gold-content__wrapper__consider__content__image">
				<a href="#"><img src="@item.Image" alt=""></a>
			</div>
			<div class="stay-gold-content__wrapper__consider__content__text">
				<div class="stay-gold-content__wrapper__consider__content__text">
					<div class="stay-gold-content__wrapper__consider__content__text__title">
						<a href="#">@item.Name</a>
						<div class="stay-gold-content__wrapper__consider__content__text__title__more">
							<a href="#"><svg width="24" height="24" class="icon_svg"><path d="M12 13.5a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm8 0a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm-16 0a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"></path></svg></a>
						</div>
					</div>
					<div class="stay-gold-content__wrapper__consider__content__text__favorite">
						<div class="stay-gold-content__wrapper__consider__content__text__favorite__star" data-star="4"></div>
						<span>389</span>
						<div class="stay-gold-content__wrapper__consider__content__text__favorite__location">
							<svg width="18" height="18" class="icon_svg"><path d="M14 7A5 5 0 004 7c0 1.97 1.15 3.658 2.806 4.472h-.169L9 16l2.363-4.528h-.169C12.85 10.658 14 8.97 14 7zM9 5a2 2 0 11.001 3.999A2 2 0 019 5z"></path></svg>
							<span>1.4 مایل</span>
							<p>دور از اقامت طلا بمانید</p>
						</div>
					</div>
					<div class="stay-gold-content__wrapper__consider__content__text__desc">
						@*<p>@item.</p>*@
					</div>
					<div class="stay-gold-content__wrapper__consider__content__text__sub-desc">
						<span>در بقالی</span>
					</div>

				</div>
			</div>
		</div>

	}



</div>
